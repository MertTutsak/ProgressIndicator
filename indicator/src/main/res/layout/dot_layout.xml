<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlDot"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dotSize"
    android:layout_gravity="center_vertical"
    android:background="@drawable/dot_background"
    android:minWidth="@dimen/dotSize">

    <com.merttutsak.indicator.countdownprogress.CountdownProgress
        android:id="@+id/progress"
        android:layout_width="@dimen/progressWidth"
        android:layout_height="@dimen/progressHeight"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/progressMargin"
        android:visibility="gone" />

</RelativeLayout>